# ================================
# Social Download Manager v2.0
# Environment Variables Template
# ================================

# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ===== APPLICATION SETTINGS =====
# Set to 'development', 'staging', or 'production'
APP_ENV=development

# Enable/disable debug logging
DEBUG=true

# Application secret key (generate a random string)
SECRET_KEY=your-secret-key-here

# ===== DATABASE CONFIGURATION =====
# Database file path (relative to project root)
DATABASE_PATH=data/downloads.db

# Enable database backups
DATABASE_BACKUP_ENABLED=true

# ===== LOGGING CONFIGURATION =====
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/app.log

# Maximum log file size in MB
LOG_MAX_SIZE=10

# Number of backup log files to keep
LOG_BACKUP_COUNT=5

# ===== DOWNLOAD SETTINGS =====
# Default download directory
DOWNLOAD_DIR=./downloads

# Maximum concurrent downloads
MAX_CONCURRENT_DOWNLOADS=3

# Default video quality (best, worst, or specific format)
DEFAULT_QUALITY=best

# Network timeout in seconds
NETWORK_TIMEOUT=30

# Number of retry attempts for failed downloads
RETRY_ATTEMPTS=3

# ===== PLATFORM API KEYS =====
# TikTok API credentials (if using official API)
TIKTOK_API_KEY=your-tiktok-api-key
TIKTOK_API_SECRET=your-tiktok-api-secret

# YouTube API credentials (if using official API)
YOUTUBE_API_KEY=your-youtube-api-key

# Instagram API credentials (if using official API)
INSTAGRAM_API_KEY=your-instagram-api-key
INSTAGRAM_API_SECRET=your-instagram-api-secret

# ===== UI SETTINGS =====
# UI theme: light, dark, system
UI_THEME=system

# UI language
UI_LANGUAGE=en

# Enable notifications
SHOW_NOTIFICATIONS=true

# ===== PERFORMANCE SETTINGS =====
# Enable performance monitoring
PERFORMANCE_MONITORING=false

# Memory limit in MB
MEMORY_LIMIT=512

# Enable caching
ENABLE_CACHING=true

# Cache directory
CACHE_DIR=cache/

# ===== DEVELOPMENT SETTINGS =====
# Enable development features
DEV_MODE=true

# Enable hot reload (if applicable)
HOT_RELOAD=true

# Enable detailed error messages
DETAILED_ERRORS=true

# Mock external services for testing
MOCK_EXTERNAL_SERVICES=false

# ===== SECURITY SETTINGS =====
# Enable HTTPS (for web interface if applicable)
HTTPS_ENABLED=false

# HTTPS port
HTTPS_PORT=8443

# SSL certificate path
SSL_CERT_PATH=

# SSL key path
SSL_KEY_PATH=

# ===== OPTIONAL PROXY SETTINGS =====
# HTTP proxy (if needed)
HTTP_PROXY=

# HTTPS proxy (if needed)
HTTPS_PROXY=

# Proxy authentication
PROXY_USERNAME=
PROXY_PASSWORD= 